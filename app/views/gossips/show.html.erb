<div class="alert alert-success" > <%= flash[:success] %> </div>

<% end %>
<div class="w-50 m-2">
<h1>Gossip nÂ° <%= @gossip.id%></h1>
  <%
=begin%>
 <span><b> Titre :</b></span>
  <%= @gossip.title%>
  <br />
  <span><b> Auteur :</b></span>
  <a href="<%=user_path(@gossip.user.id)%>"> <%= @gossip.user.last_name%></a>
